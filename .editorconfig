# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# global defaults
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# any shell type file
[[shell]]
switch_case_indent = true
space_redirects = true
keep_padding = true
function_next_line = true

# We don't have Makefiles, but if we did, they would need tabs and not spaces.
[Makefile]
indent_style = tab

# 2 spaces for json, because curly brace hell
[*.{json,json5,jsonc}]
indent_size = 2
